{
  "name": "lila-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "apps/web/**/*.{js,ts,tsx}": [
      "eslint --config apps/web/eslint.config.mjs --fix",
      "prettier --write"
    ],
    "apps/marketing/**/*.{js,ts,tsx}": [
      "eslint --config apps/marketing/eslint.config.mjs --fix",
      "prettier --write"
    ],
    "packages/ui/**/*.{js,ts,tsx}": [
      "eslint --config packages/ui/eslint.config.mjs --fix",
      "prettier --write"
    ]
  }
}
